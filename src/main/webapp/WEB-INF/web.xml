<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <context-param>
      <param-name>Usuario</param-name>
      <param-value>SisWeb</param-value>      
  </context-param>
  <context-param>
      <param-name>Senha</param-name>
      <param-value>Sis12345</param-value>
  </context-param>  
  <servlet>
  	<servlet-name>Cadastro</servlet-name>
  	<display-name>Cadastro</display-name>
  	<description></description>
  	<servlet-class>br.edu.estacio.interfaces.Cadastro</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>Listagem</servlet-name>
  	<display-name>Listagem</display-name>
  	<description></description>
  	<servlet-class>br.edu.estacio.interfaces.Listagem</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>Excluir</servlet-name>
  	<display-name>Excluir</display-name>
  	<description></description>
  	<servlet-class>br.edu.estacio.interfaces.Excluir</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>Editar</servlet-name>
  	<display-name>Editar</display-name>
  	<description></description>
  	<servlet-class>br.edu.estacio.interfaces.Editar</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>Login</servlet-name>
  	<display-name>Login</display-name>
  	<description></description>
  	<servlet-class>br.edu.estacio.interfaces.Login</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Cadastro</servlet-name>
  	<url-pattern>/Cadastro</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>Listagem</servlet-name>
  	<url-pattern>/Listagem</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>Excluir</servlet-name>
  	<url-pattern>/Excluir/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>Editar</servlet-name>
  	<url-pattern>/Editar/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>Login</servlet-name>
  	<url-pattern>/Login</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
      <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
</web-app>
